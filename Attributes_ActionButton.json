						"background": {"solid": {"color": "#12239E"}},
						"alignment": "left",
						"fontSize": 9,
						"fontFamily": "Arial",
						"bold": true,
						"italic": false,
						"underline": false,
						"titleWrap": true
						}],
			"divider":    [{
						"show": true,
						"color": {"solid": {"color": "#615E55"}},
						"style": "solid",
						"width": 2,
						"ignorePadding": true
						}],
			"spacing":  [{
						"customizeSpacing": true,
						"spaceBelowTitle": 3,
						"spaceBelowSubTitle": 3,
